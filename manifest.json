{
  "manifest_version": 2,
  "name": "Amazon't - See non-Amazon buying options",
  "description": "Displays a button that links to the google shopping page for the product you're looking at.",
  "version": "0.0.1",
  "author": "Siddharth Vadgama <me@siddv.net>",
  "homepage_url": "https://github.com/siddv/amazont",
  "icons": {
    "16": "icons/amazont-16.png",
    "32": "icons/amazont-32.png",
    "48": "icons/amazont-48.png",
    "128": "icons/amazont-128.png"
},
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com.br/**/*",
        "*://*.amazon.ca/**/*",
        "*://*.amazon.com.mx/**/*",
        "*://*.amazon.com/**/*",
        "*://*.amazon.cn/**/*",
        "*://*.amazon.in/**/*",
        "*://*.amazon.co.jp/**/*",
        "*://*.amazon.sg/**/*",
        "*://*.amazon.com.tr/**/*",
        "*://*.amazon.ae/**/*",
        "*://*.amazon.sa/**/*",
        "*://*.amazon.fr/**/*",
        "*://*.amazon.de/**/*",
        "*://*.amazon.it/**/*",
        "*://*.amazon.nl/**/*",
        "*://*.amazon.es/**/*",
        "*://*.amazon.se/**/*",
        "*://*.amazon.co.uk/**/*",
        "*://*.amazon.com.au/**/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "permissions": [
    "tabs",
    "*://*.amazon.com.br/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.com.mx/*",
    "*://*.amazon.com/*",
    "*://*.amazon.cn/*",
    "*://*.amazon.in/*",
    "*://*.amazon.co.jp/*",
    "*://*.amazon.sg/*",
    "*://*.amazon.com.tr/*",
    "*://*.amazon.ae/*",
    "*://*.amazon.sa/*",
    "*://*.amazon.fr/*",
    "*://*.amazon.de/*",
    "*://*.amazon.it/*",
    "*://*.amazon.nl/*",
    "*://*.amazon.es/*",
    "*://*.amazon.se/*",
    "*://*.amazon.co.uk/*",
    "*://*.amazon.com.au/*"
  ]
}